<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bangkit.capstone.managerku">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Managerku">
        <activity android:name=".ui.content.sales.detail.DetailSalesActivity"
            android:parentActivityName=".ui.home.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bangkit.capstone.managerku.ui.home.MainActivity" />
        </activity>
        <activity
            android:name=".ui.content.sales.AddSalesActivity"
            android:parentActivityName=".ui.home.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bangkit.capstone.managerku.ui.home.MainActivity" />
        </activity>
        <activity
            android:name=".ui.content.product.AddProductActivity"
            android:parentActivityName=".ui.home.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bangkit.capstone.managerku.ui.home.MainActivity" />
        </activity>
        <activity
            android:name=".ui.content.SettingActivity"
            android:parentActivityName=".ui.home.MainActivity">
            <meta-data
                android:name="android.support."
                android:value="com.bangkit.capstone.managerku.ui.profile.ProfileFragment" />
        </activity>
        <activity android:name=".ui.content.user.SignUpActivity" />
        <activity android:name=".ui.content.user.LoginActivity" />
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.home.MainActivity"/>
    </application>

</manifest>